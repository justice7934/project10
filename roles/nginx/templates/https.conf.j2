# ============================
# HTTPS - minio.justic.store
# ============================
server {
    listen 443 ssl;
    server_name minio.justic.store;

    ssl_certificate     /etc/letsencrypt/live/justic.store/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/justic.store/privkey.pem;

    client_max_body_size 0;

    location / {
        proxy_pass http://10.1.1.50:9001;

        # üî• WebSocket ÌïÑÏàò
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # üî• MinIO Console Ïù∏Ï¶ù ÌïÑÏàò
        proxy_set_header Authorization $http_authorization;
        proxy_set_header Cookie $http_cookie;

        # Í∏∞Î≥∏ Ìó§Îçî
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Real-IP $remote_addr;

        # ÏïàÏ†ïÏÑ±
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
    }
}
