# ============================
# HTTPS - justic.store
# ============================
server {
    listen 443 ssl;
    server_name justic.store;

    ssl_certificate     /etc/letsencrypt/live/justic.store/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/justic.store/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

